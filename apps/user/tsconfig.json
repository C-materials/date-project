{
  "extends": "@repo/typescript-config/nextjs.json",
  "noEmit": true,
  "incremental": true,
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "@/*": ["./src/*"],
    "@repo/ui/*": ["../../packages/ui/*"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
